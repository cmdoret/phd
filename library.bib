  title = {Genomic Positional Conservation Identifies Topological Anchor Point (Tap){{RNAs}} Linked to Developmental Loci},
  author = {Amaral, Paulo P. and Leonardi, Tommaso and Han, Namshik and Vir{\'e}, Emmanuelle and Gascoigne, Dennis K. and {Arias-Carrasco}, Ra{\'u}l and B{\"u}scher, Magdalena and Zhang, Anda and Pluchino, Stefano and {Maracaja-Coutinho}, Vinicius and Nakaya, Helder I. and Hemberg, Martin and Shiekhattar, Ramin and Enright, Anton J. and Kouzarides, Tony},
