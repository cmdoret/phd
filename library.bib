@article{joesch-cohenNovelMetricsQuantifying2018,
  title = {Novel Metrics for Quantifying Bacterial Genome Composition Skews},
  author = {{Joesch-Cohen}, Lena M. and Robinson, Max and Jabbari, Neda and Lausted, Christopher G. and Glusman, Gustavo},
  year = {2018},
  month = dec,
  journal = {BMC Genomics},
  volume = {19},
