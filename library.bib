}

@article{mozziconacci3DGenomeShapes2020,
  title = {The {{3D Genome Shapes}} the {{Regulatory Code}} of {{Developmental Genes}}},
  author = {Mozziconacci, Julien and Merle, M{\'e}lody and Lesne, Annick},
  year = {2020},
  month = feb,
  journal = {Journal of Molecular Biology},
