  author = {El Gazzar, Mohamed and Yoza, Barbara K. and Hu, Jean Y. -Q. and Cousart, Sue L. and McCall, Charles E.},
  year = {2007},
  month = sep,
  journal = {Journal of Biological Chemistry},
  volume = {282},
  number = {37},
