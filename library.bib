@article{aitkenTranscriptionalDynamicsReveal2015,
  title = {Transcriptional {{Dynamics Reveal Critical Roles}} for {{Non}}-Coding {{RNAs}} in the {{Immediate}}-{{Early Response}}},
  author = {Aitken, Stuart and Magi, Shigeyuki and Alhendi, Ahmad M. N. and Itoh, Masayoshi and Kawaji, Hideya and Lassmann, Timo and Daub, Carsten O. and Arner, Erik and Carninci, Piero and Forrest, Alistair R. R. and Hayashizaki, Yoshihide and {the FANTOM Consortium} and Khachigian, Levon M. and {Okada-Hatakeyama}, Mariko and Semple, Colin A.},
