issn = {14712164},
journal = {BMC Genomics},
keywords = {Compositional bias,Genome metrics,Lagging strand,Leading strand,Lyme disease,Nucleotide skew,Obligate intracellular},
number = {1},
pages = {1--12},
pmid = {29996771},
publisher = {BMC Genomics},
title = {{Novel metrics for quantifying bacterial genome composition skews}},
